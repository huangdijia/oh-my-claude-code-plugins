{
  "name": "oh-my-claude-code-plugins",
  "owner": {
    "name": "Deeka Wong",
    "email": "huangdijia@gmail.com"
  },
  "plugins": [
    {
      "name": "ai",
      "source": "./plugins/ai",
      "description": "Boost your development workflow with AI-powered agents for code review, debugging, and strategic planning.",
      "category": "development",
      "agents": [
        "./plugins/ai/agents/code-reviewer.md",
        "./plugins/ai/agents/data-scientist.md",
        "./plugins/ai/agents/debuger.md",
        "./plugins/ai/agents/prd-writer.md",
        "./plugins/ai/agents/steering-architect.md",
        "./plugins/ai/agents/strategic-planner.md",
        "./plugins/ai/agents/task-executor.md"
      ]
    },
    {
      "name": "git",
      "source": "./plugins/git",
      "description": "Enhance your Git experience with Claude's Git plugin for seamless version control.",
      "category": "development",
      "commands": [
        "./plugins/git/commands/feature.md",
        "./plugins/git/commands/flow-status.md",
        "./plugins/git/commands/hotfix.md"
      ]
    },
    {
      "name": "git-flow",
      "source": "./plugins/git-flow",
      "description": "Automate Git workflows with ease using GitFlow plugin for Claude.",
      "category": "development",
      "commands": [
        "./plugins/git-flow/commands/commit/create.md",
        "./plugins/git-flow/commands/mr/create.md",
        "./plugins/git-flow/commands/mr/review.md",
        "./plugins/git-flow/commands/pr/create.md",
        "./plugins/git-flow/commands/pr/review.md"
      ],
      "hooks": [
        "./plugins/git-flow/hooks/php-cs-fixer.json",
        "./plugins/git-flow/hooks/aut-git-add.json",
        "./plugins/git-flow/hooks/smart-commit.json"
      ]
    },
    {
      "name": "mcp",
      "source": "./plugins/mcp",
      "description": "MCP (Model Context Protocol) for Claude Code, enabling advanced mcp interactions.",
      "category": "development",
      "mcpServers": [
        "./plugins/mcp/servers.json"
      ]
    }
  ]
}